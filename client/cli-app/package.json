{
  "name": "neural-gateway-cli",
  "version": "1.0.0",
  "description": "Neural Gateway CLI Client",
  "main": "cli.js",
  "bin": {
    "neural-gateway": "./cli.js"
  },
  "scripts": {
    "start": "node cli.js",
    "build": "pkg . --out-path dist"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "systeminformation": "^5.21.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": "cli.js",
    "assets": [
      "node_modules/**/*"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-win-x64",
      "node18-macos-x64"
    ]
  }
}