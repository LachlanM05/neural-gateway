  "dependencies": {
    "auto-launch": "^5.0.5",
    "axios": "^1.6.0",
    "systeminformation": "^5.21.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0"
  }
}